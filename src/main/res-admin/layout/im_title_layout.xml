<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:background="@color/color_fafafa"
    android:layout_height="44dp">

    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/title_left_img"
        android:scaleType="fitStart"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:textSize="@dimen/im_title_view_textsize"
        android:visibility="gone"
        android:layout_centerVertical="true"
        tools:visibility="visible"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:id="@+id/title_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="title"
        android:layout_centerInParent="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:id="@+id/title_title_txt"
        android:textSize="@dimen/im_title_view_textsize"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitEnd"
        android:id="@+id/title_right_img"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="通信录"
        android:textColor="@drawable/im_selector_1da1f2_1884c7"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/title_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <View
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/title_bottom_line"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>