<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:imswitchbtn="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools">

    
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/im_setting_switchbtn"
        android:background="@null"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/color_333333"
            android:layout_marginTop="17dp"
            android:textSize="14dp"
            android:id="@+id/im_setting_title_tv"
            tools:text="title文字"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="@color/color_999999"
            android:layout_marginTop="12dp"
            android:textSize="12dp"
            android:id="@+id/im_setting_summery_tv"
            android:layout_alignParentLeft="true"
            tools:text="很长的说明文字说明文字说明文字说明文
            字说明文字说明文字说明文字说明文字说明
            文字说明文字说明文字说明文字说明文字说
            明文字说明文字说明文字说
            明文字说明文字说明文字"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    


    <com.yanxiu.im.business.view.ImSwitchButton
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        imswitchbtn:sb_checked_color="@color/color_1da1f2"
        android:id="@+id/im_setting_switchbtn"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>